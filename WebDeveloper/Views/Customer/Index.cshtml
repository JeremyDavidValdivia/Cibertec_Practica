@model IEnumerable<WebDeveloper.Model.Customers>

@using WebDeveloper.Helpers;

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fax)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @Html.DisplayStringExtension("td", item.CompanyName)
        @Html.DisplayStringExtension("td", item.ContactName)
        @Html.DisplayStringExtension("td", item.ContactTitle)
        @Html.DisplayStringExtension("td", item.Address)
        @Html.DisplayStringExtension("td", item.City)
        @Html.DisplayStringExtension("td", item.Region)
        @Html.DisplayStringExtension("td", item.PostalCode)
        @Html.DisplayStringExtension("td", item.Country)
        @Html.DisplayStringExtension("td", item.Phone)
        @Html.DisplayStringExtension("td", item.Fax)
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustomerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CustomerID })
        </td>
    </tr>
}

</table>
