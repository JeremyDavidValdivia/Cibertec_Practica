            @Html.DisplayStringExtension("td", item.HomePhone)
            @Html.DisplayStringExtension("td", item.Extension)
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
            @Html.DisplayStringExtension("td", item.Notes)
            <td>
                @Html.DisplayFor(modelItem => item.ReportsTo)
            </td>
            <td>
                @Html.DisplayFor(modelIteml => item.PhotoPath)
